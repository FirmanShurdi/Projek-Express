<div class="navbar">
  <div class="logo">
    <a href="/">
      <img src="https://i.im.ge/2024/10/13/k6iPsr.logo.png" alt="PensNews" />
    </a>
    <span class="brand-name">
      <span class="pens">meduro</span><span class="news">pride</span>
    </span>
  </div>

  <!-- Tombol hamburger -->
  <button class="menu-toggle" onclick="toggleMenu()">â˜°</button>

  <div class="nav-links">
    <a href="/">Home</a>
    <a href="/hewan">hewan</a>
    <a href="/buah">buah</a>
    <% if (session && session.role === 'admin') { %>
      <a href="/master">master</a>
    <% } %>
  </div>

  <% if (session && session.isLoggedIn) { %>
    <div class="auth-section">
      <span class="username">Hai, <%= session.username %></span>
      <a href="/logout" class="logout-btn">
        Logout
        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828479.png" alt="Logout Icon" />
      </a>
    </div>
  <% } else { %>
    <div class="login-link">
      <a href="/login">
        Login
        <img src="https://cdn-icons-png.flaticon.com/512/747/747376.png" alt="login icon" />
      </a>
    </div>
  <% } %>
</div>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .navbar {
    display: flex;
    align-items: center;
    background-color: #6b5a5a;
    padding: 10px 20px;
    flex-wrap: wrap;
  }

  .logo {
    display: flex;
    align-items: center;
    background-color: #e0e0e0;
    padding: 6px 10px;
    border-radius: 20px;
    border: 1px solid #ccc;
  }

  .logo img {
    width: 50px;
    height: auto;
    margin-right: 10px;
  }

  .brand-name {
    display: flex;
    align-items: center;
    font-family: 'Abhaya Libre', sans-serif;
    font-size: 24px;
    font-weight: bold;
  }

  .brand-name .pens,
  .brand-name .news {
    color: rgb(169, 64, 64);
    margin-left: 3px;
  }

  .menu-toggle {
    display: none;
    font-size: 24px;
    color: white;
    background: none;
    border: none;
    cursor: pointer;
    margin-left: auto;
  }

  .nav-links {
    display: flex;
    gap: 20px;
    margin-left: 40px;
  }

  .nav-links a,
  .login-link a,
  .logout-btn {
    color: #f2f2f2;
    text-decoration: none;
    background-color: #d1d1d1;
    padding: 10px 14px;
    transition: 0.3s;
    display: flex;
    align-items: center;
    border-radius: 4px;
    gap: 8px;
  }

  .nav-links a:hover,
  .login-link a:hover,
  .logout-btn:hover {
    background-color: #ddd;
    color: black;
    border-radius: 4px;
  }

  .login-link {
    margin-left: auto;
  }

  .login-link img,
  .logout-btn img {
    width: 20px;
    height: 20px;
  }

  .auth-section {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .username {
    color: #f2f2f2;
    font-weight: bold;
  }

  .success {
    background-color: #d4edda;
    color: #155724;
    padding: 6px;
    margin: 10px auto;
    border: 8px solid #c3e6cb;
    border-radius: 4px;
    text-align: center;
    width: 80%;
    max-width: 300px;
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 999;
    opacity: 1;
    transition: opacity 0.5s ease-out;
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
    }

    .nav-links {
      flex-direction: column;
      width: 100%;
      display: none;
      margin-left: 0;
      margin-top: 10px;
    }

    .nav-links.active {
      display: flex;
    }

    .auth-section,
    .login-link {
      width: 100%;
      justify-content: flex-end;
      margin-top: 10px;
    }

    .nav-links a,
    .login-link a,
    .logout-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script>
  function toggleMenu() {
    const nav = document.querySelector('.nav-links');
    nav.classList.toggle('active');
  }
</script>
