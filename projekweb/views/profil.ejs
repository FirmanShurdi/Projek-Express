    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        /* Reset */
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #222;
            background: linear-gradient(135deg, #e1f0f7, #d1f4ec);
            scroll-behavior: smooth;
        }

        header.header-parallax {
            background: url('/images/header-bg.jpg') no-repeat center/cover;
            height: 320px;
            position: relative;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            overflow: hidden;
        }

        .header-parallax::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(30, 60, 50, 0.6);
            z-index: 1;
        }

        .header-content {
            position: relative;
            z-index: 2;
            animation: fadeSlideDown 1.5s ease forwards;
        }

        .header-content h1 {
            font-size: 3.5rem;
            letter-spacing: 5px;
            margin: 0;
            font-weight: 900;
            text-shadow: 2px 2px 6px #000;
        }

        .header-content p {
            margin-top: 10px;
            font-size: 1.5rem;
            font-style: italic;
            letter-spacing: 2px;
            text-shadow: 1px 1px 4px #000;
        }

        /* Section Intro */
        .section-intro {
            max-width: 900px;
            margin: 60px auto;
            padding: 0 20px;
            text-align: center;
        }

        .section-intro h2 {
            font-size: 2.2rem;
            margin-bottom: 15px;
            color: #176c4a;
            text-shadow: 1px 1px 1px #d4f3e1;
        }

        .section-intro p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #333;
            font-weight: 600;
        }

        /* Team Section */
        .section-team {
            background: white;
            padding: 50px 20px 70px;
            box-shadow: 0 0 15px rgba(30, 60, 50, 0.1);
            border-radius: 20px;
            max-width: 1200px;
            margin: 40px auto;
        }

        .section-team h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 40px;
            color: #144a37;
            letter-spacing: 1.5px;
        }

        .team-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 40px;
            justify-content: center;
        }

        .team-card {
            background: #e9f7f1;
            border-radius: 25px;
            box-shadow: 0 6px 15px rgba(30, 60, 50, 0.15);
            max-width: 300px;
            padding: 25px 20px 35px;
            text-align: center;
            position: relative;
            cursor: pointer;
            transition: transform 0.4s ease, box-shadow 0.3s ease;
            opacity: 0;
            transform: translateY(40px);
        }

        .team-card.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .team-card:hover {
            box-shadow: 0 12px 25px rgba(20, 90, 60, 0.35);
            transform: scale(1.07);
            z-index: 10;
        }

        .photo-wrapper {
            width: 140px;
            height: 140px;
            margin: 0 auto 20px;
            border-radius: 50%;
            overflow: hidden;
            box-shadow: 0 0 15px #2a7a52;
            transition: box-shadow 0.3s ease;
        }

        .team-card:hover .photo-wrapper {
            box-shadow: 0 0 30px #47bf7a;
        }

        .photo-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        .team-card h3 {
            margin: 10px 0 5px;
            font-size: 1.4rem;
            color: #12432b;
        }

        .role {
            font-weight: 700;
            font-size: 1rem;
            color: #449c6f;
            margin-bottom: 12px;
            font-style: italic;
        }

        .team-card p {
            font-size: 0.95rem;
            line-height: 1.4;
            color: #356941;
            margin-bottom: 15px;
        }

        /* Social links */
        .social-links a {
            margin: 0 8px;
            color: #2f6d3f;
            font-size: 1.3rem;
            transition: color 0.3s ease;
            text-decoration: none;
        }

        .social-links a:hover {
            color: #46ca7a;
        }

        /* Contact Section */
        .section-contact {
            background: linear-gradient(135deg, #a8e6cf, #dcedc1);
            padding: 40px 20px 60px;
            max-width: 900px;
            margin: 50px auto 80px;
            border-radius: 20px;
            box-shadow: 0 5px 18px rgba(0, 100, 40, 0.15);
        }

        .section-contact h2 {
            color: #0f4d29;
            font-size: 2.2rem;
            margin-bottom: 25px;
            text-align: center;
            letter-spacing: 1.2px;
        }

        .contact-info {
            font-weight: 600;
            font-size: 1.1rem;
            color: #174929;
            line-height: 1.6;
            max-width: 500px;
            margin: 0 auto 30px;
            text-align: center;
        }

        .map-wrapper {
            max-width: 700px;
            margin: 0 auto;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
        }

        /* Footer */
        footer {
            background-color: #176c4a;
            color: white;
            text-align: center;
            padding: 20px 10px;
            font-weight: 600;
            letter-spacing: 1.1px;
        }

        /* Animasi */
        @keyframes fadeSlideDown {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

